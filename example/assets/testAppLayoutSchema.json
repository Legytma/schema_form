{
  "type": "MaterialApp",
  "locale": {
    "languageCode": "pt",
    "countryCode": "BR"
  },
  "title": "Título do aplicativo",
  "home": {
    "type": "Scaffold",
    "appBar": {
      "type": "AppBar",
      "title": {
        "type": "Text",
        "data": "Título do aplicativo"
      }
    },
    "drawer": {
      "type": "Drawer",
      "child": {
        "type": "ListView",
        "padding": "0,0,0,0",
        "children": [
          {
            "type": "DrawerHeader",
            "child": {
              "type": "Text",
              "data": "Título do aplicativo",
              "decoration": {
                "type": "BoxDecoration",
                "color": "#0000ff"
              }
            }
          },
          {
            "type": "ListTile",
            "title": {
              "type": "Text",
              "data": "Load from Asset"
            },
            "onTap": "loadSchemasFromAsset"
          },
          {
            "type": "ListTile",
            "title": {
              "type": "Text",
              "data": "Load from Storage"
            },
            "onTap": "loadSchemasFromStorage"
          },
          {
            "type": "ListTile",
            "title": {
              "type": "Text",
              "data": "Load from URL"
            },
            "onTap": "loadSchemasFromURL"
          }
        ]
      }
    },
    "body": {
      "type": "SchemaForm",
      "layout": {
        "type": "Column",
        "children": [
          {
            "type": "Container",
            "padding": "15.0,15.0,15.0,15.0",
            "child": {
              "type": "Column",
              "children": [
                {
                  "type": "Container",
                  "child": {
                    "type": "Column",
                    "crossAxisAlignment": "start",
                    "children": [
                      {
                        "type": "Container",
                        "child": {
                          "type": "SchemaText",
                          "style": {
                            "type": "TextStyle",
                            "fontSize": 25.0
                          },
                          "propertyAddress": "title"
                        }
                      },
                      {
                        "type": "Divider",
                        "color": "#000000"
                      },
                      {
                        "type": "Container",
                        "child": {
                          "type": "SchemaText",
                          "style": {
                            "type": "TextStyle",
                            "fontSize": 15.0
                          },
                          "propertyAddress": "description"
                        }
                      }
                    ]
                  }
                },
                {
                  "type": "Form",
                  "autovalidate": false,
                  "child": {
                    "type": "Container",
                    "padding": "10.0,10.0,10.0,10.0",
                    "child": {
                      "type": "Column",
                      "mainAxisAlignment": "start",
                      "crossAxisAlignment": "start",
                      "children": [
                        {
                          "type": "Container",
                          "child": {
                            "type": "SchemaTextFormField",
                            "key": "higroup"
                          }
                        },
                        {
                          "type": "Container",
                          "child": {
                            "type": "SchemaTextFormField",
                            "key": "password",
                            "obscureText": true
                          }
                        },
                        {
                          "type": "Container",
                          "child": {
                            "type": "SchemaTextFormField",
                            "key": "email",
                            "keyboardType": "emailAddress"
                          }
                        },
                        {
                          "type": "Container",
                          "child": {
                            "type": "SchemaTextFormField",
                            "key": "url",
                            "keyboardType": "url"
                          }
                        },
                        {
                          "type": "Container",
                          "child": {
                            "type": "SchemaTextFormField",
                            "key": "tareatexttest",
                            "keyboardType": "multiline",
                            "maxLines": 10
                          }
                        },
                        {
                          "type": "Container",
                          "child": {
                            "type": "SchemaColumnRadioListTileFormField",
                            "key": "radiobuton1"
                          }
                        },
                        {
                          "type": "Container",
                          "child": {
                            "type": "SchemaColumnRadioListTileFormField",
                            "key": "radiobuton2"
                          }
                        },
                        {
                          "type": "Container",
                          "child": {
                            "type": "SchemaSwitchFormField",
                            "key": "switch"
                          }
                        },
                        {
                          "type": "Container",
                          "child": {
                            "type": "SchemaCheckboxFormField",
                            "key": "Checkbox"
                          }
                        },
                        {
                          "type": "Container",
                          "child": {
                            "type": "SchemaCheckboxFormField",
                            "key": "Checkbox1"
                          }
                        },
                        {
                          "type": "Container",
                          "child": {
                            "type": "SchemaDropdownButtonFormField",
                            "key": "dropdownstring"
                          }
                        },
                        {
                          "type": "Container",
                          "child": {
                            "type": "SchemaDropdownButtonFormField",
                            "key": "dropdownnumber"
                          }
                        },
                        {
                          "type": "Container",
                          "child": {
                            "type": "SchemaTextFormField",
                            "key": "date",
                            "datePicker": "Date",
                            "format": "dd/MM/yyyy",
                            "locale": "pt_BR"
                          }
                        },
                        {
                          "type": "Container",
                          "child": {
                            "type": "SchemaTextFormField",
                            "key": "datetime",
                            "datePicker": "DateTime",
                            "format": "dd/MM/yyyy HH:mm:ss",
                            "locale": "pt_BR"
                          }
                        },
                        {
                          "type": "Container",
                          "child": {
                            "type": "SchemaTextFormField",
                            "key": "time",
                            "datePicker": "Time",
                            "format": "HH:mm:ss",
                            "locale": "pt_BR"
                          }
                        },
                        {
                          "type": "Container",
                          "child": {
                            "type": "RaisedButton",
                            "click_event": "schemaFormSubmit",
                            "child": {
                              "type": "Text",
                              "data": "Submit"
                            }
                          }
                        }
                      ]
                    }
                  }
                }
              ]
            }
          }
        ]
      },
      "schema": {
        "$schema": "http://json-schema.org/draft-06/schema#",
        "title": "Example of use",
        "description": "A simple example of JSON Schema Dynamic Layout Form",
        "type": "object",
        "required": [
          "higroup",
          "email",
          "password",
          "Checkbox",
          "radiobuton1"
        ],
        "properties": {
          "higroup": {
            "type": "string",
            "title": "Hi Group",
            "default": "Hi Group flutter"
          },
          "password": {
            "type": "string",
            "title": "Password"
          },
          "email": {
            "type": "string",
            "title": "Email test",
            "default": "hola a todos",
            "format": "email"
          },
          "url": {
            "type": "string",
            "title": "URL",
            "default": "hola a todos",
            "format": "uri"
          },
          "tareatexttest": {
            "type": "string",
            "title": "TareaText test",
            "default": "hola a todos"
          },
          "radiobuton1": {
            "type": "integer",
            "title": "Radio Button test 1",
            "enum": [
              1,
              2,
              3
            ],
            "titleEnum": [
              "Product 1",
              "Product 2",
              "Product 3"
            ]
          },
          "radiobuton2": {
            "type": "integer",
            "title": "Radio Button test 2",
            "enum": [
              1,
              2,
              3
            ],
            "titleEnum": [
              "Product 1",
              "Product 2",
              "Product 3"
            ]
          },
          "switch": {
            "type": "boolean",
            "title": "Switch test",
            "const": true
          },
          "Checkbox": {
            "type": "boolean",
            "title": "Checkbox test",
            "titleEnum": [
              {
                "name": "checkbox1product1",
                "title": "product 1"
              },
              {
                "name": "checkbox1product2",
                "title": "product 2"
              },
              {
                "name": "checkbox1product3",
                "title": "product 3"
              }
            ]
          },
          "Checkbox1": {
            "type": "boolean",
            "title": "Checkbox test 2",
            "list": [
              {
                "name": "checkbox2product1",
                "title": "product 1"
              },
              {
                "name": "checkbox2product2",
                "title": "product 2"
              },
              {
                "name": "checkbox2product3",
                "title": "product 3"
              }
            ]
          },
          "dropdownstring": {
            "type": "string",
            "title": "DropdownString test",
            "enum": [
              "item1",
              "item2",
              "item3"
            ],
            "list": [
              {
                "title": "Item 1",
                "value": "item1"
              },
              {
                "title": "Item 2",
                "value": "item2"
              },
              {
                "title": "Item 3",
                "value": "item3"
              }
            ]
          },
          "dropdownnumber": {
            "type": "number",
            "title": "DropdownNumber test",
            "enum": [
              1,
              2,
              3,
              3.5
            ],
            "list": [
              {
                "title": "Item 1",
                "value": 1
              },
              {
                "title": "Item 2",
                "value": 2
              },
              {
                "title": "Item 3",
                "value": 3
              },
              {
                "title": "Item 3.5",
                "value": 3.5
              }
            ]
          },
          "liststring": {
            "type": "string",
            "title": "List String",
            "default": "Item",
            "list": [
              "Item 1",
              "Item 2",
              "Item 3"
            ]
          },
          "listnumber": {
            "type": "number",
            "title": "List Number",
            "default": "0",
            "list": [
              1,
              2,
              3,
              3.5
            ]
          },
          "date": {
            "type": "string",
            "title": "Date",
            "default": "1900-01-01",
            "tooltip": "Date",
            "format": "date-time"
          },
          "datetime": {
            "type": "string",
            "title": "Date Time",
            "default": "1900-01-01 00:00:00",
            "tooltip": "Date Time",
            "format": "date-time"
          },
          "time": {
            "type": "string",
            "title": "Time",
            "default": "00:00:00",
            "tooltip": "Time",
            "format": "date-time"
          }
        }
      },
      "data": {
        "higroup": "teste",
        "password": "teste",
        "email": "email@de.teste",
        "url": "http: //localhost",
        "tareatexttest": "Teste de texto\nCom múltiplas linhas"
      }
    }
  }
}
